<p id="notice"><%= notice %></p>

<h1><%= t('festivals.index.title') %></h1>

<em><%= t('festivals.index.description') %></em>
<br>
<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('festivals.index.date') %></th>
      <th><%= t('festivals.index.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @festivals.each do |festival| %>
      <tr>
        <td><%= festival.name %></td>
        <td><%= festival.date %></td>
        <td><%= festival.status %></td>
        <td><%= link_to t('tableau.show'), festival %></td>
        <td><%= link_to t('tableau.edit'), edit_festival_path(festival) %></td>
        <td><%= link_to t('tableau.destroy'), festival, method: :delete, data: { confirm: t('tableau.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('festivals.index.new'), new_festival_path %>
