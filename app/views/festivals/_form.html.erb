    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="name" type="text" class="active" name="name">
            <label for="name">Nom Du Festival</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <label for="date" class="active">Date Du Festival</label>
            <input name="date" type="date" class="datepicker">

          </div>
          <div class="input-field col s12">
            <label for="status" class="active">Status Des Candidatures</label>
            <select>

              <option value="ouvert">OUVERT</option>
              <option value="ferme">FERME</option>
            </select>
          </div>

          <div class="row">
            <div class="col s12">
              <form action="#">
               <div class="file-field input-field">
